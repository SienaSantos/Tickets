# Incident
GET /admin/incidents/new             controllers.IncidentController.incidents()
POST /admin/incident               controllers.IncidentController.createIncident()
#POST /admin/:id/delete             controllers.IncidentController.deleteIncident(id : Long)
#GET /admin/:id/show                controllers.IncidentController.showIncident(id : Long)
#POST /admin/:id/update             controllers.IncidentController.updateIncident(id : Long)



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
